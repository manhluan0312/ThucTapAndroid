<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_idkm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MaKM"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/tv_idservice_KM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ma idservice "
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/TenKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TênKM "
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/tv_tg_bdkm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian bắt đầu KM "
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tv_tg_ktkm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian kết thúc khuyến mại  "
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tv_giakm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá khuyến mại  "
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tv_songayKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số ngày khuyến mại  khuyến mại  "
        android:textSize="24sp"
        />
</LinearLayout>
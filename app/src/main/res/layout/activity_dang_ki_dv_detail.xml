<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Detail.DangKiDV_Detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THÔNG TIN ĐĂNG KÝ GÓI DỊCH VỤ "
        android:textColor="@color/red"
        android:layout_gravity="center"
        android:textSize="24sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã  đăng ký dịch vụ:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_madkdv_dkdv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_weight="1"
            android:textSize="24sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã dịch vụ : "
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_madv_dkgdv_detail"
            android:textStyle="italic"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã khuyến mãi:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_makm_dkgdv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã khách hàng:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_makh_dkgdv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian đăng ký:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_tgdk_dkgdv_dettail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian kích hoạt:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_tgkh_dkgdv_dettail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian kết thúc:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_tgkt_dkgdv_dettail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số ngày đã đăng ký :"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_day_dkgdv_dettail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền phải trả:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_gia_dkgdv_dettail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay:"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tv_pay_dkgdv_dettail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="italic"
            />
    </LinearLayout>
</LinearLayout>